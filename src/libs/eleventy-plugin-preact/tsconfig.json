{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "preact",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,

    "noEmit": true
  }
}
